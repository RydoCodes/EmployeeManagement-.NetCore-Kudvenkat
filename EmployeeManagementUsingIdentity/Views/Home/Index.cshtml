@model IEnumerable<Employee>

@{
    ViewBag.Title = "Rydo Index Page";
}

    <div class="card-deck">
        @foreach (var rydoemp in Model)
        {
            var photopath = "~/images/" + (rydoemp.PhotoPath ?? "employees.png");

            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@rydoemp.Name</h3>
                </div>

                <img class="card-img-top imageThumbnail" src="@photopath"
                     asp-append-version="true" />

                <div class="card-footer text-center">
                    <a asp-action="Details" asp-route-id="@rydoemp.Id" class="btn btn-primary">View</a>
                    <a asp-action="Edit" asp-route-id="@rydoemp.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@rydoemp.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        }
    </div>

