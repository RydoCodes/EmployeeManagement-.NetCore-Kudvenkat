@model IEnumerable<Employee>

@{
    // Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee List";
    
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photolocation = "~/Images/" + (employee.PhotoPat ?? "Google.png") ;
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top" src="@photolocation" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary">View using Tag Helpers.</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>